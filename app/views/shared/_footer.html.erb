<div class="footer">
  <div class="footer-links">
    <a href="/foodplaces"><i class="fa-solid fa-utensils fa-xl <%= current_page?(foodplaces_path) ? 'footer-links-active' : '' %>"></i></a>
    <%= link_to map_path do %>
      <i class="fa-solid fa-map fa-xl <%= current_page?(map_path) ? 'footer-links-active' : '' %>"></i>
    <% end %>
    <a href="/users"><i class="fa-solid fa-user-group fa-xl <%= current_page?(users_path) ? 'footer-links-active' : ''%>"></i></a>
    <div id="myNav" class="overlay">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <div class="overlay-content">
        <% if user_signed_in? %>
          <a href="/profile/<%= current_user.id %>">My profile </a>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'Logout',  destroy_user_session_path, data: {turbo_method: :delete} %>
        <% else %>
        <a href="/users/sign_in">Login</a>
      <% end %>
      </div>
    </div>

    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
    <script>
      function openNav() {
        document.getElementById("myNav").style.width = "100%";
      }

      function closeNav() {
        document.getElementById("myNav").style.width = "0%";
      }
    </script>
  </div>
</div>
