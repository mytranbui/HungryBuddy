<div class="warpper">
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
      <%= form_with url: foodplaces_path, method: :get, class: "d-flex"  do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "search for a foodplace"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="container"></div>
  <h1>FoodPlaces</h1>
  <div class="card-wrap">
    <% @foodplaces.each do |foodplace| %>
      <div class="card-thumbnail">
        <%= link_to foodplace_path(foodplace) do %>
          <div class="card-image">
            <% if foodplace.photo.present? %>
              <%= cl_image_tag foodplace.photo.key %>

              <%= link_to favorite_foodplace_path(foodplace, scope: :favorite), data: { turbo_method: :patch } do %>
                <i class="fa-regular fa-heart icon-index"></i>
              <% end %>
              <br>
              <%= link_to favorite_foodplace_path(foodplace, scope: :saved), data: { turbo_method: :patch } do %>
                <i class="fa-regular fa-bookmark icon-index"></i>

              <% end %>
              <br>

              <%= link_to favorite_foodplace_path(foodplace, scope: :visited), data: { turbo_method: :patch } do %>
                <i class="fa-regular fa-circle-check icon-index"></i>

              <% end %>

            <% else %>
              <img src="https://imgflip.com/s/meme/Grandma-Finds-The-Internet.jpg" />
            <% end %>
          </div>
          <div class="card-info-wrapper">
            <h4><span><%= foodplace.name %></span></h4>
            <h6><%= foodplace.address %></h6>
            <h4 class="rating"><%= foodplace.google_rating %></h4>
            <p><%= foodplace.opening_times %></p>
          </div>
        <% end %>
      </div>
    <% end %>

