  </div>

  <div class = "container mt-2">
    <div class="card-wrap">
      <p>Nickname: <%= @user.nickname %></p>
      <p>Diet: <%= @user.diet %></p>
      <p>Likes:<%= @user.likes %></p>
      <p>Dislikes: <%= @user.dislikes %></p>
      <p>Allergie: <%= @user.allergies %></p>
      <p>Bio: <%= @user.bio %></p>
    </div>
  </div>

</div>

